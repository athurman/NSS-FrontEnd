form(action='/genres/#{genre.isNew ? "" : genre.id}', method='post')

  if !genre.isNew
    input(type='hidden', name='_method', value='put')
  fieldset
    legend= title
    .row
      .small-4.columns
      mixin field(4, 'name', 'Name', genre.name, null, true)
      .small-4.columns
    .row
      .small-2.columns.small-offset-8: a.button.radius.alert.small.expand(href='/songs') Cancel
      .small-2.columns: button.radius.success.small.expand(type='submit') Save Genre