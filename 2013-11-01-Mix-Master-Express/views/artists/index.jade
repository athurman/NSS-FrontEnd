extends ../template/layout

block content
  .row
    .small-12.columns
      h1(style='text-align: center;') mix it up.
  .row
    .small-12.columns
      #artists
        each artist in artists
          .artist
            h3: a(href='/artists/#{artist.id}')= artist.name
            img(src=artist.photo)
            a(href=artist.website)
            .row
              .small-5.columns
              .small-2.columns
                  a.button.tiny.radius(href='/songs/#{artist.id}/edit') Edit Artist
              .small-1.columns
                form(action='/artists/#{artist.id}', method='post')
                  input(type='hidden', name='_method', value='delete')
                  button.tiny.alert.radius(type='submit') Delete