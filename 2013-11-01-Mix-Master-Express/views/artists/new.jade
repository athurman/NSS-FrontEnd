extends ../template/layout
include ../mixins/form-helper.jade

block content
 .row
    .small-12.columns
      h1(style='text-align: center;') new artist.
  .row
    .small-12.columns
      form(action='/artists', method='post')
        fieldset
          legend new artist
          .row
            mixin field(4, 'name', 'Name', null, null, true)
            mixin field(4, 'photo', 'Image URL')
            mixin field(4, 'website', 'Website URL')
          .row
            .small-12.columns
              label(for='bio') Artist Bio:
              textarea#bio(name='bio')
          .row
            .small-12.columns
              each song in songs
                input(type='checkbox', value=song.id, name='songs')
                span= song.title
          .row
            .small-2.columns.small-offset-8: a.button.radius.alert.small.expand(href='/artists') Cancel
            .small-2.columns: button.radius.success.small.expand(type='submit') Save Artist