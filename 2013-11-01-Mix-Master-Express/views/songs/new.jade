extends ../template/layout
include ../mixins/form-helper.jade

block content
  .row
    .small-12.columns
      h1(style='text-align: center;') new mix.
  .row
    .small-12.columns
      form(action='/songs', method='post')
        fieldset
          legend new mix
          .row
            mixin field(4, 'title', 'Title', null, null, true)
            mixin field(4, 'duration', 'Song Duration (sec)')
            mixin field(4, 'genres', 'Genres (blues, rock, country)')
          .row
            mixin field(4, 'filename', 'File Name')
            mixin field(4, 'art', 'Song Image')
            .small-4.colums
          .row
            .small-12.columns
              label(for='lyrics') Lyrics:
              textarea#lyrics(name='lyrics')
          .row
            .small-2.columns.small-offset-8: a.button.radius.alert.small.expand(href='/songs') Cancel
            .small-2.columns: button.radius.success.small.expand(type='submit') Save Post