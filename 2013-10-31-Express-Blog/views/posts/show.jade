extends ../template/layout

block content
  .row
    .small-12.columns
      h1.subheader(style="text-align: center;") Post
  .row
    .small-3.columns
    .small-2.columns.small-offset-3
      a(href='/') Home
    .small-2.columns
      a(href='/posts') Posts
    .small-2.columns
      a(href='/posts/new') New Post
    .small-3.columns
  .row
    .small-12.columns
      #posts
        h1.subheader= post.title
        span= post.author
        span= post.date
        p= post.tags
        .post
          img(src=post.image)
          p(align='left')= post.content
          .clear
  .row
    .small-12.columns
      form(action='/posts/#{post.id}', method='post')
        input(type='hidden', name='_method', value='delete')
        button#delete.small.alert.radius(type='submit') Delete