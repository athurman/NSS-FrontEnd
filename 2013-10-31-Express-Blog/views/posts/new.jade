extends ../template/layout
include ../mixins/form-helper.jade

block content
  .row
    .small-12.columns
      h1.subheader(style="text-align: center;") New Post
  .row
    .small-3.columns
    .small-2.columns.small-offset-3
      a(href='/') Home
    .small-2.columns
      a(href='/posts') Posts
    .small-2.columns
      a(href='/posts/new') New Post
    .small-3.columns
  .row
    .small-12.columns
      form(action='/posts', method='post')
        fieldset
          legend New Post
          .row
            mixin field(4, 'title', 'Title', null, null, true)
            mixin field(4, 'author', 'Author')
            mixin field(4, 'date', 'Date', date)
          .row
            mixin field(6, 'tage', 'Tags')
            mixin field(6, 'image', 'Image')
          .row
            .small-12.columns
              label(for='content') Content:
              textarea#content(name='content')
          .row
            .small-2.columns.small-offset-8: a.button.radius.alert.small.expand(href='/posts') Cancel
            .small-2.columns: button.radius.success.small.expand(type='submit') Save Post