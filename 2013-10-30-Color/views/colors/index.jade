extends ../template/layout

block content
  .row
    .small-12.columns
      h1 Color Page
  .row
    table#colors
      thead: tr
        each color in colors
          th= color
      tbody: tr
        each color in colors
          - var width = colors.length
          td.color(style='background-color:#{color}; width:' + (100 / width) + '%;')

