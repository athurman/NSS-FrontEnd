extends ../template/layout
include ../mixins/form-helper

block content
  .row
    .small-12.columns
      h1.subheader(style='text-align: center;') Create New Movie
  .row
    .small-12.columns
      a.button.tiny.radius(href='/movies') Movies
  .row
      form(action='/movies',method='post')
  .row
      .small-6.columns
        mixin field('title', 'Title:', 'Jaws', true)
      .small-6.columns
  .row
      .small-6.columns
        mixin field('image', 'Image Source:', 'http://www.jaws.com/jaws.png')
      .small-6.columns
  .row
      .small-6.columns
        mixin field('color', 'Color:', 'red')
      .small-6.columns
  .row
      .small-6.columns
        mixin field('rated', 'Rated:', 'R')
      .small-6.columns
  .row
      .small-6.columns
        mixin field('studio', 'Studio:', 'Universal Studios')
      .small-6.columns
  .row
      .small-6.columns
        mixin field('gross', 'Gross Income:', '345354345345')
      .small-6.columns
  .row
      .small-6.columns
        mixin field('numTheatres', 'No. of Theatres:', '200')
      .small-6.columns
  .row
      .small-2.columns
        button.radius.small(type='submit') Save Movie
      .small-10.columns

