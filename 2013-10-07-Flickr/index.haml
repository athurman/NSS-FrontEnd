%head
  %meta{charset: "utf-8"}
  %meta{name: "viewport", content: "width=device-width"}
  %title Foundation 4
  %link{rel: "stylesheet", href: "css/normalize.css"}
  %link{rel: "stylesheet", href: "css/foundation.css"}
  %link{rel: "stylesheet", href: "css/app.css"}
  %script{src: "js/vendor/custom.modernizr.js"}
%body
  .row
    .small-12.comuns
      %h1 Flickr Slideshow
  .row
    .small-2.columns
      %input#query{type: 'text', autofocus:true}
    .small-10.columns
      %input#search.button.radius.small{type:'button', value:'Search Flickr!'}
      %input#clear.button.radius.alert.small{type:'button', value:'Clear All!'}
      %input#delete_selected.button.radius.alert.small{type:'button', value:'Delete Selected Images'}
      %input#save.button.radius.success.small{type:'button', value:'Save'}
  .row
    .small-8.columns
      #h4.subheader Searched Images
      #photos
    .small-4.columns
      #h4.subheader Saved Images
      #saved-photos

  %script{src: 'js/vendor/jquery-1.10.2.js'}
  %script{src: 'js/vendor/foundation.min.js'}
  %script{src: 'js/vendor/underscore.js'}
  %script{src: 'js/app/app.js'}
